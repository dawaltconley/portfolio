{
  "diagnostic.displayByAle": true,
  "suggest.noselect": true,
  "tsserver.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "tailwindCSS.enable": true,
  "tailwindCSS.lint.invalidConfigPath": "ignore",
  "languageserver": {
    "astro": {
      "command": "npx",
      "filetypes": ["astro"],
      "args": ["astro-ls", "--stdio"],
      "initializationOptions": {
        "environment": "node",
        "typescript": {
          "serverPath": "typescript/lib/tsserverlibrary.js"
        }
      }
    }
  }
}
