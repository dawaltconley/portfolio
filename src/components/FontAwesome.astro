---
import type { IconDefinition } from '@fortawesome/fontawesome-common-types';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
export interface Props {
  icon: IconDefinition;
  class?: string;
  inline?: boolean;
}
const { icon, class: className, inline = false } = Astro.props;
---

<FontAwesomeIcon
  className={`icon ${className ?? ''} ${inline ? 'icon--inline' : ''}`}
  icon={icon}
/>
<style>
  .icon {
    width: 1em;
    width: var(--icon-size, 1em);
    height: 1em;
    height: var(--icon-size, 1em);
  }
  .icon--inline {
    display: inline;
    vertical-align: -0.125em;
  }
</style>
